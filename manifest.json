{
  "manifest_version": 3,
  "name": "Tabula Rasa",
  "description": "Review the open tabs in your current window, select the ones you no longer need, and close them in one click.",
  "version": "1.0.4",
  "browser_specific_settings": {
    "gecko": {
      "id": "tabula-rasa@fejikso",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "action": {
    "default_title": "Tabula Rasa",
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "F8"
      },
      "description": "Open Tabula Rasa"
    }
  }
}

